#cloud-config
package_update: true
packages:
  - qemu-guest-agent
hostname: ${hostname}
users:
  - default
  - name: ${linux_user}
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    ssh_authorized_keys:
      - ${ssh_authorized_key}

ssh_authorized_keys:
 - ${ssh_authorized_key}

write_files:
- encoding: b64
  content: ${startup}
  owner: root:root
  path: /root/startup.sh
  permissions: '0644'

runcmd:
  - systemctl enable --now qemu-guest-agent.service
  - sh /root/startup.sh